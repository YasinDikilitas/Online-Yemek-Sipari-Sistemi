
@{
    Layout = null;
}

@model IEnumerable<StajProjesi.Models.Manset>

<div class="banner">
    <div class="container">
        <div class="banner-text">
            <div class="col-sm-5 banner-left wow fadeInLeft animated" data-wow-delay=".5s">
                <h2>Fırsatlar</h2>
                <a href="/Indirimler/"><h3>Görmek İçin</h3></a> 

                <div class="count main-row">
                    <ul id="example">
                        <li><span class="hours">01</span><p class="hours_text">Hours</p></li>
                        <li><span class="minutes">40</span><p class="minutes_text">Minutes</p></li>
                        <li><span class="seconds">40</span><p class="seconds_text">Seconds</p></li>
                    </ul>
                    <div class="clearfix"> </div>
                    <script type="text/javascript" src="js/jquery.countdown.min.js"></script>
                    <script type="text/javascript">
								$('#example').countdown({
									date: '12/24/2020 15:59:59',
									offset: -8,
									day: 'Day',
									days: 'Days'
								}, function () {
									alert('Done!');
								});
                    </script>
                </div>

            </div>
            <div class="col-sm-7 banner-right wow fadeInRight animated" data-wow-delay=".5s">
                <section class="slider grid">
                    <div class="flexslider">
                        <ul class="slides">
                            @foreach (var item in Model)
                            {
                                <li>
                                    <h4>@item.MBaslik</h4>
                                    <a href="/Indirimler/">   <img src="@item.Mresimyol" alt=""></a> 
                                </li>
                            }
                        </ul>
                    </div>
                </section>
                <!--FlexSlider-->
                <script defer src="js/jquery.flexslider.js"></script>
                <script type="text/javascript">
						$(window).load(function(){
						  $('.flexslider').flexslider({
							animation: "pagination",
							start: function(slider){
							  $('body').removeClass('loading');
							}
						  });
						});
                </script>
                <!--End-slider-script-->
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
