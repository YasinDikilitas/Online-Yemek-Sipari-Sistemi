
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<StajProjesi.Models.Urunler>

<div class="gallery">
    <div class="container">
        <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
            <h3 class="title">Yemek<span>Kocaeli</span></h3>
            <p>En İyisini En Ucuza Almanız İçin Buradayız </p>
        </div>
        <div class="gallery-info">
            @foreach (var urunler in Model)
            {
                if (urunler.Indirimid == null)
                {
                    <div class="col-md-3 gallery-grid wow flipInY animated" data-wow-delay=".5s">
                        <a href="/Urunler/Detay/@urunler.id"><img src="@urunler.ResimYol" class="img-responsive" alt="" /></a>
                        <div class="gallery-text simpleCart_shelfItem">
                            <h5><a class="name" href="/Urunler/Detay/@urunler.id">@urunler.Baslik </a></h5>
                            <p><span class="item_price">@urunler.Fiyat TL</span></p>
                            <h4 class="sizes"> </h4>

                        </div>
                    </div>
                }
                else
                {

                    <div class="col-md-3 gallery-grid wow flipInY animated" data-wow-delay=".5s">
                        <a href="/Urunler/Detay/@urunler.id"><img src="@urunler.ResimYol" class="img-responsive" alt="" /></a>
                        <div class="gallery-text simpleCart_shelfItem">
                            <h5><a class="name" href="/Urunler/Detay/@urunler.id">@urunler.Baslik </a></h5>
                            <p><span class="item_price">@((Double.Parse(urunler.Fiyat)) - (((Double.Parse(urunler.Fiyat) / 100)) * (Double.Parse((urunler.Indirim.Miktar).ToString())))) TL</span></p>
                            <h4 class="sizes">Önceki Fiyat:<strike>@urunler.Fiyat TL</strike></h4>
                            <h4 class="sizes">İndirim Miktarı:%@urunler.Indirim.Miktar</h4>

                        </div>
                    </div>
                }

            }

            <div class="clearfix"></div>
        </div>
    </div>
</div>



